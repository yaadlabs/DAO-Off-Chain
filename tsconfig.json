{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": false,
    "outDir": ".",
    "sourceMap": true,
    "declaration": true,
    "composite": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    // "paths": {
    //   "*": ["*", "./dist/*"]
    // }
  },
  "include": [
    "index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
